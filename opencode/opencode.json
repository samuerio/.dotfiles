{
    "$schema": "https://opencode.ai/config.json",
    "instructions": [
        "/home/zhe/github/.dotfiles/CONVENTIONS.md",
    ],
    "plugin": [],
    "provider": {
        "myprovider": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "volcengine",
            "options": {
                "baseURL": "https://ark.cn-beijing.volces.com/api/coding/v3",
                "apiKey": "{env:ARK_API_KEY}"
            },
            "models": {
                "doubao-seed-code": {
                    "name": "doubao-seed-code"
                },
                "glm-4.7": {
                    "name": "glm-4.7",
                    "options": {
                        "thinking": {
                            "type": "enabled"
                        }
                    }
                },
                "kimi-k2.5": {
                    "name": "kimi-k2.5",
                    "options": {
                        "thinking": {
                            "type": "enabled"
                        }
                    }
                }
            }
        },
    },
    "mcp": {
        "chrome-devtools": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "chrome-devtools-mcp@latest"
            ]
        }
    }
}
